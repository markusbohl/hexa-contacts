{
  "compilerOptions": {
    "module": "commonjs",
    "charset": "utf-8",
    "target": "es6",
    "lib": [
      "es6"
    ],
    "types": [
      "reflect-metadata"
    ],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "outDir": "dist"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}
